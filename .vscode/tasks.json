{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "ClientBuild",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-std=c++17",

				"-I/${workspaceFolder}/include/",
				"${workspaceFolder}/src/main.cpp",

				"-pthread",
				"-lboost_system",
				"-lpcap",

				"-o",
				"${workspaceFolder}/main"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}